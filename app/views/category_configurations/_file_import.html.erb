<%# locals: (category_configuration:) %>

<div class="mb-4 background-blue-paler p-4 rounded-3">
  <h3 class="h5 mb-2 fw-bold text-dark-blue">Fichier d'import</h3>

  <div class="mx-3 mb-4">
    <div class="row py-2 align-items-center">
      <div class="col-4 d-flex align-items-center">
        <span class="fw-bold">Modèle utilisé</span>
      </div>
      <div class="col-4">
        <%= link_to category_configuration.file_configuration.sheet_name,
                    file_configuration_path(category_configuration.file_configuration),
                    class: "text-decoration-underline" %>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-end">
    <%# TODO: Implement file selection modal in a future phase %>
    <button class="btn btn-blue" disabled title="Fonctionnalité à venir">
      Changer de modèle
    </button>
  </div>
</div>
