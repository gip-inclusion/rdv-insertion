<%= render "common/remote_modal" do %>
  <div>
    <div class="text-center mb-3">
      <%= image_tag "illustrations/error-line.svg", alt: "Illustration d'un message d'erreur", class: "mb-3" %>
    </div>
      <% if local_assigns[:title] %>
        <h4 class="text-center"><b><%= local_assigns[:title] %></b></h4>
      <% else %>
        <h4 class="text-center"><b>Oups! Une erreur est survenue ğŸ‘·â€</b></h4>
      <% end %>
    <div class="p-3">
      <% errors.each_with_index do |error, index| %>
        <% if error.is_a?(TemplatedErrorPresenter) %>
          <%= error.render(self) %>
        <% else %>
          <p><%= error %></p>
        <% end %>
        <% if index < errors.size - 1 %>
          <hr class="mx-auto w-50">
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="d-flex justify-content-center px-3">
    <button type="button" id="confirm-button" class="btn btn-primary me-2" data-bs-dismiss="modal">
      OK
    </button>
  </div>
<% end %>
