          <li class="fr-footer__bottom-item">
            <%= link_to "C.G.U", cgu_path, class: "fr-footer__bottom-link", id: "rdvi_footer_CGU-link" %>
          </li>
          <li class="fr-footer__bottom-item">
            <%= link_to "https://rdv-insertion-medias-production.s3.fr-par.scw.cloud/assets/20241209-rdv-insertion-DPAv0.3.pdf", target: "_blank", title: "Télécharger le DPA (Convention de sous-traitance) au format PDF", class: "fr-icon-file-line fr-link--icon-left fr-footer__bottom-link", id: "rdvi_footer_DPA-link" do %>D.P.A<% end %>
          </li>
          <li class="fr-footer__bottom-item">
            <%= link_to 'Politique de confidentialité', politique_de_confidentialite_path, class: "fr-footer__bottom-link", id: "rdvi_footer_privacy-link" %>
