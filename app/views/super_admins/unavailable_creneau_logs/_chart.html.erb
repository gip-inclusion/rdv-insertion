<%
  starts_at = params[:starts_at] ? Time.zone.parse(params[:starts_at]) : 30.days.ago
  ends_at = params[:ends_at] ? Time.zone.parse(params[:ends_at]) : Time.now
%>
<%= 
  line_chart(scope.grouped_by_day(
    starts_at,
    ends_at
  ), colors: ["#083b66"])
%>
<%= form_with method: :get, local: true, class: "chart-actions" do |f| %>
  <span> Afficher seulement du </span>
  <%= f.date_field :starts_at, value: starts_at, class: "form-control" %>
  <span> au </span>
  <%= f.date_field :ends_at, value: ends_at, class: "form-control" %>

  <%= f.submit "Afficher", class: "btn btn-primary" %>
<% end %>
