<%= render "common/remote_modal", title: "Détails du fichier d'import", size: :large do %>
  <div class="px-4"><%= render "details", file_configuration: @file_configuration %></div>

  <hr class="hr-bleed">

  <div class="d-flex justify-content-end">
    <% if params[:return_to_selection_path].present? %>
      <%= link_to params[:return_to_selection_path], data: { turbo_frame: "remote_modal" }, class: "btn btn-blue" do %>
        Retour
      <% end %>
    <% else %>
      <button type="button" class="btn btn-blue" data-bs-dismiss="modal">
        Fermer l'aperçu
      </button>
    <% end %>
  </div>
<% end %>
