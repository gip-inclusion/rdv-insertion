<%= render "common/remote_modal", title: "Modifier le modÃ¨le de fichier", size: :large do %>
  <%= form_with model: @file_configuration,
                url: file_configuration_path(@file_configuration),
                method: :patch,
                data: { turbo_frame: "remote_modal" } do |f| %>
    <%= turbo_frame_tag "error_list" %>
    <div class="px-4"><%= render "form", f: f %></div>

    <hr class="hr-bleed">

    <div class="d-flex justify-content-end gap-2">
      <% if params[:return_to_selection_path].present? %>
        <%= link_to params[:return_to_selection_path], data: { turbo_frame: "remote_modal" }, class: "btn btn-blue-out" do %>
          Annuler
        <% end %>
      <% else %>
        <button type="button" class="btn btn-blue-out" data-bs-dismiss="modal">Annuler</button>
      <% end %>
      <%= f.submit "Enregistrer les modifications", class: "btn btn-blue" %>
    </div>
  <% end %>
<% end %>
