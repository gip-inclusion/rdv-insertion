<% content_for :header do %>
  <%= render 'common/header' %>
<% end %>

<% content_for :head do %>
  <%= stylesheet_link_tag "dsfr.min", "application-turbo-track": "reload" %>
  <%= javascript_include_tag "dsfr.module.min.js", type: 'module' %>
  <%= javascript_include_tag "dsfr.nomodule.min.js", nomodule: true %>
  <%= stylesheet_link_tag "utility/dsfr-utility.min", "application-turbo-track": "reload" %>
<% end %>


<!DOCTYPE html>
<html>
  <%= render 'layouts/head' %>

  <%# The difference from _application_base.html.erb is that the body has a white background and no footer %>
  <body data-matomo-mask class="bg-white">
    <%= render 'layouts/rdv_insertion_instance_name' %>
    <%= content_for :header %>
    <%= content_for :announcement_banner %>
    <%= render 'common/flashes' %>
    <div class="wrapper reset-dsfr-overrides">
      <%= turbo_frame_tag "remote_modal", target: "_top" %>
      <%= yield %>
      <%= render 'common/accept_cgu_modal' if @should_display_accept_cgu %>
      <%= render 'common/accept_dpa_modal' if @should_display_accept_dpa %>
      <%= render 'common/crisp' %>
    </div>
  </body>
</html>
