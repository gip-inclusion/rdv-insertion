<div class="row block-white justify-content-center">
  <ul class="nav nav-tabs">
    <% @all_configurations.each do |configuration| %>
      <li class="nav-item">
        <%= link_to configuration.motif_category_human, compute_index_path(@organisation, @department, motif_category: configuration.motif_category), class:  "nav-link #{configuration.id == @current_configuration&.id ? 'active' : ''}"%>
      </li>
    <% end %>
  </ul>
  <div class="col-12 text-center">
    <% if no_search_results?(@applicants.to_a) %>
      <h4 class="py-4">Aucun allocataire ne correspond Ã  votre recherche</h4>
    <% else %>
      <table class="table table-hover table-responsive">
        <thead class="text-dark-blue">
          <th scope="col">Nom</th>
          <th scope="col">PrÃ©nom</th>
          <th scope="col" class="d-none d-lg-table-cell">ðŸ“± SMS</th>
          <th scope="col" class="d-none d-lg-table-cell">ðŸ“§ Email</th>
          <th scope="col" class="d-none d-lg-table-cell">ðŸ“® Courrier</th>
          <% if show_invitations?(@current_configuration) %>
            <th scope="col">PremiÃ¨re invitation</th>
            <th scope="col">DerniÃ¨re invitation</th>
          <% end %>
          <% if show_notification?(@current_configuration) %>
            <th scope="col">DerniÃ¨re Notification envoyÃ©e le</th>
          <% end %>
          <th scope="col">Statut</th>
          <th scope="col"></th>
        </thead>
        <tbody class="align-middle">
          <% @applicants.each do |applicant| %>
            <% rdv_context = applicant.rdv_context_for(@current_motif_category) %>
            <tr class="<%= "table-danger" if applicant.is_archived? %>">
              <td><%= display_attribute applicant.last_name %></td>
              <td><%= display_attribute applicant.first_name %></td>
              <td class="d-none d-lg-table-cell">
                <% if applicant.phone_number.present? %>
                  <%= render "invitations/checkbox_form", applicant: applicant, invitation_format: "sms", motif_category: @current_motif_category, rdv_context: rdv_context, already_invited: rdv_context.invited_by?("sms") %>
                <% else %>
                  -
                <% end %>
              </td>
              <td class="d-none d-lg-table-cell">
                <% if applicant.email.present? %>
                  <%= render "invitations/checkbox_form", applicant: applicant, invitation_format: "email", motif_category: @current_motif_category, rdv_context: rdv_context, already_invited: rdv_context.invited_by?("email")  %>
                <% else %>
                  -
                <% end %>
              </td>
              <td class="d-none d-lg-table-cell">
                <% if applicant.address.present? %>
                  <%= render "invitations/checkbox_form", applicant: applicant, invitation_format: "postal", motif_category: @current_motif_category, rdv_context: rdv_context, already_invited: rdv_context.invited_by?("email")  %>
                <% else %>
                  -
                <% end %>
              </td>
              <% if show_invitations?(@current_configuration) %>
                <td id="first-invitation-date-<%= rdv_context.id %>"><%= display_attribute format_date(rdv_context.relevant_first_invitation_sent_at) %></td>
                <td id="last-invitation-date-<%= rdv_context.id %>"><%= show_last_invitation_date?(rdv_context) ? display_attribute(format_date(rdv_context.last_invitation_sent_at)) : " - " %></td>
              <% end %>
              <% if show_notification?(@current_configuration) %>
                <td><%= display_attribute format_date(applicant.last_notification_sent_at) %></td>
              <% end %>
              <% if applicant.is_archived? %>
                <td>Dossier archivÃ©</td>
              <% else %>
                <td id="rdv-context-status-<%= rdv_context.id %>" class="<%= background_class_for_context_status(rdv_context, @current_configuration.number_of_days_before_action_required) %>">
                  <%= display_context_status(rdv_context, @current_configuration.number_of_days_before_action_required) %>
                </td>
              <% end %>
              <td class="padding-left-15">
                <%= link_to compute_applicant_path(applicant, @organisation, @department) do %>
                  <button class="btn btn-blue">GÃ©rer</button>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
    <div class="row justify-content-center">
      <div class="col-3 justify-content-center nav-pagination">
        <%= paginate @applicants, outer_window: 1, window: 1 %>
      </div>
    </div>
  </div>
</div>
