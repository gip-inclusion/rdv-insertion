<% content_for :title, "Connexion agent - rdv-insertion" %>

<div class="form-container">
  <div class="mb-3">
    <h1 class="login-title">Connexion agent</h1>
  </div>
  <%= form_with action:"#", id: "js-login-form" do |form| %>
    <h5 class="text-center mb-4 mx-1">Identifiez-vous avec votre email et mot de passe RDV-Solidarités</h5>
    <div class="login-form-group">
      <%= form.label :email, "Adresse email" %>
      <%= form.email_field :email , class: "form-control", placeholder: "prénom.nom@email.com" %>
    </div>
    <div class="login-form-group">
      <%= form.label :password, "Mot de Passe" %>
      <div class="input-group">
        <%= form.password_field :password, class: "form-control", placeholder: "*************" %>
        <div class="input-group-append">
          <span class="input-group-text">
            <i class="fas fa-eye"></i>
          </span>
        </div>
      </div>
      <div class="mt-3 text-decoration-underline">
        <%= link_to "Mot de passe oublié ?", "#{ENV["RDV_SOLIDARITES_URL"]}/users/password/new", target: :blank %>
      </div>
    </div>
    <div class=text-center>
      <%= form.submit "Se connecter", class: "btn btn-blue p-3 px-4" %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <hr class="flex-fill">
      <h4 class="text-center my-4 font-weight-bold px-3">OU</h4>
      <hr class="flex-fill">
    </div>
    <div class="d-flex mt-4 justify-content-center align-items-center">
      <%= render 'agent_connect/connect_button' %>
    </div>
    <div class="alert alert-info d-flex" role="alert">
      <i class="fas fa-info ms-2 me-3 mt-2"></i>
      <div>
        <p> Privilégiez maintenant la connexion avec ProConnect qui remplace Inclusion connect. </p>
        <p> Si nécessaire, <%= link_to inclusion_connect_auth_path, class: "alert-link text-decoration-underline" do %>cliquez ici<% end %> pour continuer d'utiliser Inclusion Connect. </p>
      </div>
    </div>
  <% end %>
</div>
