<div class="d-flex justify-content-center">
  <table class="card-white text-center align-middle m-3 shadow-sm">
    <thead>
      <tr>
          <th class="px-4 pt-3 pb-1">
            <h4>Convocation SMS</h4>
          </th>
          <th class="px-4 pt-3 pb-1">
            <h4>Convocation mail</h4>
          </th>
          <th class="px-4 pt-3 pb-1">
            <h4>Convocation courrier</h4>
          </th>
      </tr>
    </thead>
    <tbody>
      <% convocations_by_format = convocations_by_format(convocations, ["sms", "email", "postal"]) %>
      <% max_number_of_convocations_in_any_format = max_number_of_convocations_in_any_format(convocations_by_format) %>
      <%= render "follow_ups/convocation_dates_rows", convocations_by_format: ,max_number_of_convocations_in_any_format:, motif_category:, last_convocable_participation: %>
      <% if max_number_of_convocations_in_any_format > 1 %>
        <tr>
          <td class="px-4 py-2" colspan="3" style="cursor='pointer'" data-controller="convocation-dates" data-action="click->convocation-dates#toggleHistory" data-motif-category-id="<%= motif_category.id %>">
              <button type="button">
                <i class="fas fa-angle-down"></i> Voir l'historique <i class="fas fa-angle-down"></i>
              </button>
              <button type="button" class="d-none">
                <i class="fas fa-angle-up"></i> Voir moins <i class="fas fa-angle-up"></i>
              </button>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
