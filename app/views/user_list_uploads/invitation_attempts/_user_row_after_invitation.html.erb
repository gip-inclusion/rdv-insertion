<tr>
  <% [:title, :first_name, :last_name, :affiliation_number, :phone_number, :email, :post_code].each do |attribute| %>
    <td class="<%= "text-truncate-150" if attribute.in?([:email, :affiliation_number]) %>">
      <span><%= display_attribute(user_row.user.send(attribute)) %></span>
    </td>
  <% end %>

  <td>
    <div class="d-flex justify-content-between align-items-center">
      <span class="badge rounded-pill <%= user_row_status_after_invitation_badge_class(user_row.after_invitation_status) %>"
            <%= tooltip_for_invitation_errors(user_row) %>
      >
        <%= user_row_status_after_invitation_text(user_row.after_invitation_status) %>
        <%= user_row_status_after_invitation_icon_for_status(user_row.after_invitation_status) %>
      </span>
    </div>
  </td>
</tr>