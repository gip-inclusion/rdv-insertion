<%= render "common/remote_modal" do %>
  <div class="modal-body pt-0">
    <div id="custom-body" class="w-100 mb-4">
      <div class="w-100 text-center mb-3">
        <%= image_tag "illustrations/success.svg", alt: "Illustration d'un message de succès", class: "mb-3" %>
        <h5 class="mt-2">La sauvegarde de l'usager <strong><%= @user_row.user.to_s %></strong> a été réussie</h5>
      </div>
      <div class="text-center">
        <%# we use the refresh-page-periodically controller only to refresh the page automatically once, so that the modal closes automatically after being displayed
            and the list updated %>
        <%= link_to "OK", "#", class: "text-center btn btn-blue", data: { bs_dismiss: "modal", controller: "refresh-page-periodically" } %>
      </div>
    </div>
  </div>
<% end %>