<div id="organisations_list" class="col-12 col-md-6 px-5">
  <h4>
    <%= User.human_attribute_name(:organisations) %>
  </h4>

  <p class="mb-2 mt-3 flex-wrap d-flex">
    <% user.organisations.each do |organisation| %>
      <%= render "users_organisations/user_organisation_badge", organisation:, department:, user:, archive: organisation_archive(organisation, archives), with_delete: true %>
    <% end %>
  </p>

  <%= link_to(structure_users_organisations_path(user.id), data: { turbo_frame: 'remote_modal' }) do %>
    <button class="btn btn-blue"><i class="fas fa-plus"></i> Ajouter une organisation </button>
  <% end %>
</div>
