<div class="mb-1">
  <div class="w-100">
    <% any_active_filters = params[:convocation_date_after].present? || params[:convocation_date_before].present? || params[:first_invitation_date_after].present? || params[:first_invitation_date_before].present? || params[:last_invitation_date_after].present? || params[:last_invitation_date_before].present? %>
    <%= link_to(new_structure_choose_date_kind_path(url_params), data: { turbo_frame: 'remote_modal' }, id: "rdvi_index-nav_filter-invitation-summon-date") do %>
      <button class="btn btn-grey w-100 dropdown-toggle <% if any_active_filters %>border-blue<% end %>">
        Date d'invitation ou de convocation
        <% if any_active_filters %>
        <span class="filter-active convocation-date-filter-active">
          <% if invitation_or_convocation_active_filters_count > 0 %>
            <span class="filter-active convocation-date-filter-active">
              <%= invitation_or_convocation_active_filters_count %>
            </span>
          <% end %>
        </span>
        <% end %>
      </button>
    <% end %>
  </div>
</div>
