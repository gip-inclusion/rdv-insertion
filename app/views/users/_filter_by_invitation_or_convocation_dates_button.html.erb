<div class="mb-1">
  <div class="w-100">
    <%= link_to(new_structure_choose_date_kind_path(url_params), data: { turbo_frame: 'remote_modal' }, id: "rdvi_index-nav_filter-invitation-summon-date") do %>
      <button class="btn btn-grey w-100 dropdown-toggle <%= "border-blue" if any_active_invitation_or_convocation_filters? %>">
        Date d'invitation ou de convocation
        <% if any_active_invitation_or_convocation_filters? %>
          <span class="filter-active convocation-date-filter-active">
            <% if invitation_or_convocation_active_filters_count > 0 %>
              <span class="filter-active convocation-date-filter-active">
                <%= invitation_or_convocation_active_filters_count %>
              </span>
            <% end %>
          </span>
        <% end %>
      </button>
    <% end %>
  </div>
</div>
