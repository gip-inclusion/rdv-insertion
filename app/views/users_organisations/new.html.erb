<%= render "common/remote_modal", title: "Choisissez une organisation" do %>
    <%= form_for(:users_organisation, url: users_organisations_path_with_structure(@user.id), method: :post) do |f| %>
      <div class="form-group scrollable-list">
        <%= f.select :organisation_id,
                    collection: @organisations.map { |o| [o.name, o.id] },
                    { include_blank: false },
                    { class: "form-control" }
        %>
      </div>
      <div class="form-group text-center">
        <%= f.button :submit, "Enregistrer", class: "btn btn-blue" %>
      </div>
    <% end %>
<% end %>

