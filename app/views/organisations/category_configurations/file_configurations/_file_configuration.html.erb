<%# locals: (category_configuration:, organisation:) %>

<%= turbo_frame_tag dom_id(category_configuration, :file_import) do %>
  <div class="mb-4 background-blue-paler p-4 rounded-3">
    <h3 class="h5 mb-2 fw-bold text-dark-blue">Fichier d'import</h3>

    <div class="mx-3 mb-4">
      <div class="row py-2 align-items-center">
        <div class="col-4 d-flex align-items-center">
          <span class="fw-bold">Modèle utilisé</span>
        </div>
        <div class="col-4">
          <%= link_to category_configuration.file_configuration.sheet_name,
                      file_configuration_path(category_configuration.file_configuration),
                      data: { turbo_frame: "remote_modal" },
                      class: "text-decoration-underline" %>
        </div>
      </div>
    </div>

    <div class="d-flex justify-content-end">
      <%= link_to edit_organisation_category_configuration_file_configuration_selection_path(organisation, category_configuration),
                  data: { turbo_frame: "remote_modal" },
                  class: "btn btn-blue" do %>
        Changer de modèle
      <% end %>
    </div>
  </div>
<% end %>
