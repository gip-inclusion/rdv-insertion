<%= turbo_frame_tag tag, class: "badge badge-tag text-truncate justify-content-between me-2 d-flex" do %>
  <span class="text-truncate">
    <%= tag.value %>
  </span>
  <%=
    link_to(
      organisation_tag_path(organisation_id: organisation.id, id: tag.id),
      data: {
        controller: "confirmation-modal",
        turbo_method: :delete,
      },
      class: 'ms-2'
    ) do
  %>
    <i class="ri-close-line" data-action="click->confirmation-modal#show"></i>
    <%= render(
          "organisations/tags/tag_remove_confirm",
          tag: tag,
          organisation: organisation,
          user_count: user_count
        ) %>
  <% end%>
<% end %>
