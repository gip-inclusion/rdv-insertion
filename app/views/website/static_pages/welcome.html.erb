      <div class="home-accompagnement-dot active" data-home-accompagnement-target="dot" data-action="click->home-accompagnement#toggleStep"></div>
      <div class="home-accompagnement-dot" data-home-accompagnement-target="dot" data-action="click->home-accompagnement#toggleStep"></div>
