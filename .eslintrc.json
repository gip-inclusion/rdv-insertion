{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "plugins": [
    "no-unsanitized",
    "rdv-insertion"
  ],
  "rules": {
    "quotes": [
      "error",
      "double"
    ],
    "no-underscore-dangle": [
      "error",
      {
        "allowAfterThis": true
      }
    ],
    "no-param-reassign": "off",
    "prefer-destructuring": "off",
    "class-methods-use-this": "off",
    "no-nested-ternary": "off",
    "no-use-before-define": "off",
    "arrow-body-style": "off",
    "rdv-insertion/enforce-safe-swal": "error",
    "rdv-insertion/enforce-safe-tippy": "error",
    "no-unsanitized/method": [
      "error",
      {
        "escape": {
          "methods": [
            "DOMPurify.sanitize"
          ]
        }
      }
    ],
    "no-unsanitized/property": [
      "error",
      {
        "escape": {
          "methods": [
            "DOMPurify.sanitize"
          ]
        }
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": [
          "app/javascript"
        ]
      }
    }
  }
}